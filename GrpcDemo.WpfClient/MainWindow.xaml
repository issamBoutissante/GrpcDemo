<Window x:Class="GrpcDemo.WpfClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="gRPC WPF Client" Height="200" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <!-- Input for name -->
            <TextBox x:Name="NameTextBox" Width="300" Height="30" Margin="0,10,0,10" 
                     />
            <!-- Button to trigger gRPC call -->
            <Button x:Name="CallServerButton" Width="150" Height="30" Content="Call gRPC Server" 
                    Click="CallServerButton_Click" />
            <!-- Label to show the response -->
            <Label x:Name="ResponseLabel" Width="300" Height="30" Margin="0,10,0,10" 
                   Content="Response will appear here" />
        </StackPanel>
    </Grid>
</Window>
